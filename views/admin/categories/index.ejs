<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <hr>
  <h2>Categorias</h2>
  <a  href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>
    <% categories.forEach((category) => { %>
      <tbody>
          <th><%= category.id %></th>
          <th><%= category.title %></th>
          <th><%= category.slug %></th>
          <th>
            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
            <form method="post" action="/category/delete" onsubmit="allowDelete(event, this)">
              <input type="hidden" name="id" value="<%= category.id %>" style="display: inline;">
              <button class="btn btn-danger">Deletar</button>
            </form>
          </th>
      </tbody>
    <% }) %>
  </table>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
  function allowDelete(e, form) {
    e.preventDefault();
    const decision = confirm("Você realmente deseja deletar está categoria? ")
    if(decision) form.submit();
  }
</script>