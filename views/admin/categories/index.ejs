<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <hr>
  <h2>Categorias</h2>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach((categories) => { %>
        <th><%= categories.id %></th>
        <th><%= categories.title %></th>
        <th><%= categories.slug %></th>
        <th>Ações</th>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer.ejs') %>